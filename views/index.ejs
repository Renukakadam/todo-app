<!DOCTYPE html>
<html>
<head>
  <title>ToDo App</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>My ToDo List</h1>
  <form action="/add" method="POST">
    <input type="text" name="task" required>
    <button type="submit">Add Task</button>
  </form>
  <ul>
    <% todos.forEach(function(todo) { %>
      <li><%= todo %></li>
    <% }); %>
  </ul>
</body>
</html>
